@import 'nib'

// screen widths are 1150+ - large desktop

$native-photo-width = 223px
$native-photo-height = 270px

.jumbo-card
  position: relative
  padding: 1px

  background url(/img/home-jumbo-card-bg.jpg) center top fixed
  background-size: 100%;


  // mobile layout first, smallest width will be 420px because of viewport-resize.coffee

  .container
    margin-top 7%
    margin-bottom 7%

  $photo-width = $native-photo-width * 0.6

  .image
    width $photo-width
    height $native-photo-height * .6
    background url("/img/bernie-cv-photo.jpg") no-repeat
    background-size 100% 100%
    border-radius 5px
    box-shadow 0 0 20px #000

  .greeting
    position absolute
    top 40px
    left $photo-width + 55px
    font-size 20px
    font-weight bold
    line-height 0
    right 50px
    text-shadow: 0 0 10px #000

  .name
    position absolute
    top 10px
    left $photo-width + 20px
    font-size 50px
    line-height 1em
    text-shadow 0 0 10px #000

  .tagline
    font-size 16px
    text-shadow: 0 0 4px #000
    line-height 1.5em

  @media screen and (min-width 620px)
    .greeting
      top 30px

    .name
      top 0px

    .tagline
      position absolute
      top 80px
      left $photo-width + 20px
      font-size 18px
      max-width 450px

  @media screen and (min-width 1000px)

    .image
      width $native-photo-width
      height $native-photo-height

    .greeting
      font-size 35px
      font-weight bold
      top 45px
      left 330px

    .name
      font-size 80px
      left 280px
      top: -10px

    .tagline
      font-size 25px
      top 150px
      left 280px
      max-width 600px



.xjumbo-card
  position: relative
  padding: 1px

  background url(/img/home-jumbo-card-bg.jpg) center top fixed
  background-size: 100%;


  .container
    margin-top 7%
    margin-bottom 7%

