  @media screen and (max-width 1000px)

    .name
      font-size 55px
      top 10px
      line-height 1em

    .tagline
      top 150px
      font-size 20px

  // includes landscape phablets
  @media screen and (max-width 800px)

    .image
      width $native-photo-width * 0.8
      height $native-photo-height * 0.8

    .greeting
      font-size 45px
      top 15px
      left 220px
      font-size 25px

    .name
      top 0px
      left 220px
      font-size 40px
      line-height 0.8em

    .tagline
      left 50px
      font-size 20px
      margin-right 0


    @media screen and (max-width 600px)
      .image
        width 111px
        height 135px

      .greeting
        top 25px

      .name
        top 20px
        font-size 45px

      .tagline
        position static
        left 50px
        margin-right 0
        font-size 15px




