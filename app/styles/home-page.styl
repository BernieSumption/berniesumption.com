    position absolute
    display block
    font-size 35px
    font-weight bold
    line-height 0
    top 35px
    left 330px
    right 50px

    text-shadow: 0 0 10px #000

  .tagline
    position absolute
    font-size 25px
    line-height 1.5em
    top 150px
    left 280px
    margin-right 50px
