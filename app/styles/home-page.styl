    width photo-width
    height photo-height
    background url("/img/bernie-cv-photo.jpg") no-repeat
    background-size 100% 100%
    border-radius 5px

    box-shadow 0 0 20px #000

  .name
    position absolute
    font-size 80px
    line-height 0
    left 280px
    top: 20px
    text-shadow 0 0 10px #000


