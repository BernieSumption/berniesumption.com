@import 'nib'

bg-color = #0d1528

body
  font-family "Droid Serif", serif
  font-size 19px
  color #FFF
  min-width 420px
  background-color #333
  background linear-gradient(left, bg-color, lighten(bg-color, 10%), bg-color)

h1, h2, h3, h4, h4, h6, .title
  font-family Lato, sans-serif
  text-shadow: 0 0 5px #000
  clearfix()

h2
  margin 50px 0 0 0




.container
  max-width 1100px
  margin 0 auto // above 1100, centre container
  position relative

  clearfix()

  @media screen and (max-width 1200px)
    margin 0 50px // 900-1100 shrink keeping 50px margin

  @media screen and (max-width 1000px)
    margin 0 5% // below 900 start to shrink margin
