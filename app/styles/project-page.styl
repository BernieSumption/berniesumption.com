
@import './shared.styl'


.demo
  position absolute
  background-color green
  width 100px
  height 100px
  bottom 20%

.project-page
  position absolute
  background no-repeat center center fixed
  background-size 100%
  background-size cover
  height 100%
  width 100%


  .heading
    padding 1px 10% 50px 25px
    background rgba(0, 0, 0, 0.2)
    // this gradient is slightly s-shaped, less harsh than a straight linear gradient
    background linear-gradient(bottom, rgba(0, 0, 0, 0), 15px rgba(0, 0, 0, 0.15), 30px rgba(0, 0, 0, 0.45), 45px rgba(0, 0, 0, 0.6))

    thick-text-shadow()

    p
      max-width 1200px


    h1
      margin-bottom 25px
      line-height 0.5em

      @media $medium_device
        margin 50px
        font-size 60px

    p
      font-size 17px
      margin-bottom 12px

      @media $medium_device
        font-size 22px
        margin 25px 50px

  .main
    position absolute
    overflow hidden
    bottom 0
    left 0
    right 0
    top 200px

  .play-button
    display block
    width 100%
    height 0
    top 40%
    text-align center
    position absolute
    font-size 100px
    margin-top -0.5em

    @media $medium_device
      font-size 150px

    @media $large_device
      font-size 200px


  .fork-me
    position absolute
    width 149px
    height 149px
    top 0
    right 0
    image 'DIGEST(/images/fork-me.png)' 100%


.button
  color #FFF
  thick-text-shadow(#000)

  &:hover
    text-decoration none
    thick-text-shadow($accent_color)



.back-button
  padding-right 20px

.popover-frame
  display none

  .close-button
    position absolute
    display block
    top 50px
    right 25px
    font-size 75px


.popover-frame, .popover-frame iframe
  position absolute
  border none
  width 100%
  height 100%
  top 0
